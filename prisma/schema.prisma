// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String    @id @default(uuid()) @db.Uuid
  email        String    @unique
  passwordHash String
  name         String?
  createdAt    DateTime  @default(now())
  sessions     Session[]
  items        Item[]

  @@map("users")
}

enum ItemType {
  IDEA
  RECIPE
  ACTIVITY
  PROJECT
  LOCATION
}

enum ItemStatus {
  ACTIVE
  DONE
  ARCHIVED
}

model Item {
  id          String     @id @default(uuid()) @db.Uuid
  title       String
  type        ItemType
  description String?
  priority    Int        @default(1)
  status      ItemStatus @default(ACTIVE)
  dueDate     DateTime?
  tags        String[]
  pinned      Boolean    @default(false)
  createdById String     @db.Uuid
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  deletedAt   DateTime?

  createdBy User        @relation(fields: [createdById], references: [id], onDelete: Cascade)
  links     ItemLink[]
  images    ItemImage[]

  @@index([status])
  @@index([type])
  @@index([priority])
  @@index([updatedAt])
  @@index([createdById])
  @@index([deletedAt])
  @@map("items")
}

model ItemLink {
  id        String   @id @default(uuid()) @db.Uuid
  itemId    String   @db.Uuid
  title     String?
  url       String
  createdAt DateTime @default(now())

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@map("item_links")
}

model ItemImage {
  id          String   @id @default(uuid()) @db.Uuid
  itemId      String   @db.Uuid
  storageKey  String
  url         String
  contentType String
  byteSize    Int
  width       Int?
  height      Int?
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId])
  @@map("item_images")
}

model Session {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("sessions")
}
